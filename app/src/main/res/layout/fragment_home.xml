<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="200dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            style="@style/TextAppearance.MyApp.TextHome"
            android:textSize="24sp"
            android:text="@string/hi" />

        <TextView
            android:id="@+id/txt_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            style="@style/TextAppearance.MyApp.TextHome"
            android:textSize="24sp"
            android:text="@string/where" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/card"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/txt_oneway"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/oneway"
                    android:textAppearance="@style/TextAppearance.MyApp.TextHome" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/txt_round_trip"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/roundTrip"
                    android:fontFamily="@font/rubik_medium"
                    android:textAppearance="@style/TextAppearance.MyApp.TextHome" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:background="@drawable/card_home"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/from"
                        android:textColor="@color/abu"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginEnd="20dp"
                        app:strokeColor="@color/white"
                        android:id="@+id/btnDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_del"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/del"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/txt_delhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/rubik"
                            android:text="@string/new_delhi"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/travel_date"
                        android:textColor="@color/abu"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginEnd="20dp"
                        app:strokeColor="@color/white"
                        android:id="@+id/btnDepartureDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/date"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/traveller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/traveller"
                        android:textColor="@color/abu"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginEnd="20dp"
                        app:strokeColor="@color/white"
                        android:id="@+id/btntraveller"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_traveller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/txt_traveller"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/to"
                        android:textColor="@color/abu"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:strokeColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_jfk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/rubik_medium"
                                android:text="@string/jfk"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_newyork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/rubik"
                                android:text="@string/new_york"
                                android:textAlignment="textEnd"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/txt_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/returnn"
                        android:textColor="@color/abu"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginStart="20dp"
                        app:strokeColor="@color/white"
                        android:id="@+id/btnDestinationDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/date"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/CLASS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/str_class"
                        android:textColor="@color/abu"
                        android:textSize="12sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_marginStart="20dp"
                        app:strokeColor="@color/white"
                        android:id="@+id/btnClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/economy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/economy"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="305dp"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_btn"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_btn" />

                <TextView
                    android:id="@+id/txt_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/rubik"
                    android:text="@string/show"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/btnSearch"
            style="@style/Widget.MyApp.Button"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/search"
            android:layout_marginTop="15dp"
            app:cornerRadius="18dp" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="@string/hotOffer"
            style="@style/TextAppearance.MyApp.titleCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hot_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/hot_offer"
            tools:visibility="visible" />

        <TextView
            style="@style/TextAppearance.MyApp.titleCard"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="@string/popular_flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_popular"
            tools:visibility="visible" />

        <TextView
            style="@style/TextAppearance.MyApp.titleCard"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:text="@string/important_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_important"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_important_info"
            tools:visibility="visible" />

    </LinearLayout>

</ScrollView>