<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TiketFragment"
    android:background="@drawable/bg_tiket"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:padding="20dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/etiket"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/white"/>

        </LinearLayout>

        <ImageView
            android:src="@drawable/plane_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="-100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/jam"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp" />

        <LinearLayout
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cityCodeOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/black"
                    android:text="@string/del"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cityOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/black"
                    android:text="@string/new_york"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="125dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cityCodeDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/black"
                    android:text="@string/jfk"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cityDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/black"
                    android:text="@string/new_york"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_margin="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:background="@drawable/eticket_card"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/kelas"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/economy"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            app:cornerRadius="15dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/flighttiket"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/passenger"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/passengers"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_passenger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/txt_passengers"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/flight"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/flight"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/code_flight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/txt_flight"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvClass"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/str_class"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/economy"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cityCodeOrigin2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/rubik_medium"
                                android:textColor="@color/black"
                                android:text="@string/jfk"
                                android:textSize="14sp" />

                            <ImageView
                                android:padding="10dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/plane_blk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/cityCodeDestination2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/rubik_medium"
                                android:textColor="@color/black"
                                android:text="@string/jfk"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/date"
                            android:layout_marginTop="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/txt_date"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/date"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/airplane"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/airplane"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_airplane"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/txt_gate"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/tvprice"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/price"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted"
                    android:layerType="software" />

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/barcode" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik"
                    android:textColor="@color/black"
                    android:text="@string/txt_barcode"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/ticketBack"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_margin="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:background="@drawable/eticket_card"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/kelasBack"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="@string/economy"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            app:cornerRadius="15dp"
                            app:strokeColor="@color/black"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/flighttiket"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/passengerBack"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/passengers"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_passengerBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/txt_passengers"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/flightBack"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/flight"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/code_flightBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/txt_flight"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvClassBlack"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/str_class"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_classBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/economy"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cityCodeOriginBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/rubik_medium"
                                android:textColor="@color/black"
                                android:text="@string/jfk"
                                android:textSize="14sp" />

                            <ImageView
                                android:padding="10dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/plane_blk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/cityCodeDestinationBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/rubik_medium"
                                android:textColor="@color/black"
                                android:text="@string/jfk"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/dateBack"
                            android:layout_marginTop="50dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/txt_date"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_dateBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/date"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/gateBack"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/airplane"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txt_airplaneBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/txt_gate"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/priceBack"
                            android:layout_marginTop="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text="@string/tvprice"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/txtPriceBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:textColor="@color/black"
                            android:text="@string/price"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/dotted"
                    android:layerType="software" />

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/barcode" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt_barcodeBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik"
                    android:textColor="@color/black"
                    android:text="@string/txt_barcode"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>